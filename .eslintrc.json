{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "ignorePatterns": ["./*"],
  "rules": {
    "eol-last": ["error", "always"],
    "react-hooks/exhaustive-deps": ["warn", {
      "additionalHooks": "useSparseCallback"
    }],
    "no-restricted-imports": ["error", {
      "patterns": ["../*", "@/app/blog/*"]
    }]
  }
}
